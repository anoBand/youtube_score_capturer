# .ebextensions/03_nginx_timeout.config

files:
  # Nginx의 추가 설정 파일 경로에 timeout.conf 파일을 생성합니다.
  # Elastic Beanstalk가 이 파일을 읽어 Nginx 설정에 반영합니다.
  "/etc/nginx/conf.d/timeout.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # 클라이언트 요청 처리 시간을 10분(600초)으로 늘립니다.
      # 이 값들은 기본값인 60초보다 길게 설정하여
      # 동영상 처리 중 연결이 끊어지는 것을 방지합니다.
      proxy_connect_timeout 600;
      proxy_send_timeout 600;
      proxy_read_timeout 600;
      send_timeout 600;

container_commands:
  # Nginx 서비스를 재시작하여 변경된 설정을 적용합니다.
  # 이 명령은 애플리케이션 배포 마지막 단계에서 실행됩니다.
  01_restart_nginx:
    command: "sudo service nginx restart"